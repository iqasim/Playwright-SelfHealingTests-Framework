    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true, 
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "@playwright/test"]
